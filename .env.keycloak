# Keycloak Configuration for CamTracker
# Copy this to .env.local and modify as needed

# Keycloak Server URLs
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=camtracker
KEYCLOAK_CLIENT_ID=camtracker-client

# Keycloak Admin Credentials (for setup only)
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Application URLs
CAMTRACKER_CLIENT_URL=http://localhost:5173
CAMTRACKER_SERVER_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=1h

# Database (if you want to use separate DB for auth)
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=keycloak
AUTH_DB_USER=keycloak
AUTH_DB_PASSWORD=keycloak_password